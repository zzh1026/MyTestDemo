        <!--android:gravity="center"-->
        <!--android:text="textview3"-->
        <!--android:textColor="@android:color/white"-->
        <!--app:layout_scrollFlags="scroll"-->
        <!--/>-->

    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>
